{
  "name": "sanitize-basename",
  "repository": "github:fabiospampinato/sanitize-basename",
  "description": "Sanitize a file name for cross-platform validity.",
  "version": "2.0.0",
  "type": "module",
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
